package algorism;

import java.util.Scanner;

public class Question {

	public static void main(String[] args) {
		// 1에서 4까지의 합계를 구하는것
		// 스캐너를 사용하여 구할것
		
		Scanner sc = new Scanner(System.in);
		
		int a;
		int[] b= new int[4];
		int sum = 0;
		
		for(int i =0; i<b.length;i++) {
		System.out.print("입력 >>");
		a=sc.nextInt(); 
		b[i] = a;
		sum += b[i];
		System.out.println(sum);
		}
		sc.close();
	}

}


